<%= simple_form_for @book,:html => { :multipart => true} do |f| %>
<%= select_tag(:category_id,options_for_select(@categories), :prompt => "图书类型") %>
    <%= f.file_field :book_img %>
    <%= f.input :title,label: "书名" %>
    <%= f.input :description,label:"简介" %>
    <%= f.input :author,label:"作者" %>
    <%= f.button :submit,:"提交内容" %>
<% end %>