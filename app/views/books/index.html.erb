<h1 class="current-category"><%= params[:category] %></h1>

<% if @books.count == 0 %>
    <h1>此类型下还没有收录书籍</h1>
<% else %>
   <div class="row">
    <% @books.each do |book| %>
       <div class="col-md-3">
        <a href="/books/<%= book.id %>">
            <%= image_tag book.book_img.url(:original) ,class:"img-responsive bookStyle" %>
        </a>
        <h2><%= link_to book.title, book_path(book) %></h2>
        <p class="h4"><span>作者: </span><%= book.author %> <br>  <span><%= book.created_at %></span></p>
       </div>
    <% end %>
    </div>
<% end %>

